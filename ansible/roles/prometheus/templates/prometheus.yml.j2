global:
  scrape_interval: 15s

rule_files:
  - alert.rules.yml

scrape_configs:
- job_name: 'prometheus'
  scrape_interval: 5s
  static_configs:
  - targets:
    - '{{ hostvars["monitoring"].ansible_host }}:9090'

- job_name: 'node_exporter'
  scrape_interval: 5s
  static_configs:
  - targets:
    - '{{ hostvars["monitoring"].ansible_host }}:9100'
    - '{{ hostvars["gitlab"].ansible_host }}:9100'
    - '{{ hostvars["test"].ansible_host }}:9100'
    - '{{ hostvars["prod"].ansible_host }}:9100'

- job_name: 'service'
  scrape_interval: 5s
  static_configs:
  - targets:
    - '{{ hostvars["test"].ansible_host }}:8080'
    - '{{ hostvars["prod"].ansible_host }}:8080'

alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - '{{ hostvars["monitoring"].ansible_host }}:9093'
